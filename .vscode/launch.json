{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v", "-s"],
      "console": "integratedTerminal",
      "cwd": "${fileDirname}",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/projects/unit3/build-mcp-server/starter"
      }
    },
    {
      "name": "Debug Specific Test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "projects/unit3/build-mcp-server/starter/test_server.py::TestAnalyzeFileChanges::test_returns_json_string",
        "-v",
        "-s"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "python": "${workspaceFolder}/projects/unit3/build-mcp-server/starter/.venv/Scripts/python.exe"
    },
    {
      "name": "Debug All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "projects/unit3/build-mcp-server/starter/test_server.py",
        "-v",
        "-s"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "python": "${workspaceFolder}/projects/unit3/build-mcp-server/starter/.venv/Scripts/python.exe"
    }
  ]
}
